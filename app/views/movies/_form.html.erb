<%= form_with(model: movie) do |form| %>
  <% if movie.errors.any? %>
    <div style="color: red; margin-bottom: 20px; padding: 15px; background-color: #ffe6e6; border: 1px solid #f5c2c7; border-radius: 5px;">
      <h2 style="font-size: 1.2rem; margin: 0;"><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>
      <ul style="margin: 5px 0 0 20px; padding: 0;">
        <% movie.errors.each do |error| %>
          <li style="font-size: 0.9rem;"><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 20px;">
    <%= form.label :title, style: "display: block; font-weight: bold; color: #333; margin-bottom: 5px;" %>
    <%= form.text_field :title, style: "width: 95%; padding: 12px; border: 2px solid #d1d1d1; border-radius: 5px; font-size: 1rem; transition: border-color 0.3s; background-color: #f9f9f9;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :rating, style: "display: block; font-weight: bold; color: #333; margin-bottom: 5px;" %>
    <%= form.text_field :rating, style: "width: 95%; padding: 12px; border: 2px solid #d1d1d1; border-radius: 5px; font-size: 1rem; transition: border-color 0.3s; background-color: #f9f9f9;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :description, style: "display: block; font-weight: bold; color: #333; margin-bottom: 5px;" %>
    <%= form.text_area :description, style: "width: 95%; padding: 12px; border: 2px solid #d1d1d1; border-radius: 5px; font-size: 1rem; transition: border-color 0.3s; background-color: #f9f9f9; resize: vertical;" %>
  </div>

  <div style="margin-bottom: 20px;">
    <%= form.label :release_date, style: "display: block; font-weight: bold; color: #333; margin-bottom: 5px;" %>
    <%= form.text_field :release_date, style: "width: 95%; padding: 12px; border: 2px solid #d1d1d1; border-radius: 5px; font-size: 1rem; transition: border-color 0.3s; background-color: #f9f9f9;" %>
  </div>

  <div style="text-align: center;">
    <%= form.submit "Submit", style: "padding: 12px 20px; background-color: #28a745; color: white; border: none; border-radius: 5px; font-size: 1rem; cursor: pointer; transition: background-color 0.3s;" %>
  </div>
<% end %>

<style>
  input[type="text"],
  input[type="number"],
  textarea {
    transition: border-color 0.3s, box-shadow 0.3s;
  }

  input[type="text"]:focus,
  input[type="number"]:focus,
  textarea:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    outline: none;
  }
</style>
