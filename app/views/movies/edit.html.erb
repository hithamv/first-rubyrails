<% content_for :title, "Editing Movie" %>

<h1 style="color: #007bff; text-align: center; font-size: 2.2rem; margin-bottom: 20px; font-family: 'Arial', sans-serif;">Editing Movie</h1>

<div style="max-width: 600px; background-color: #ffffff; padding: 40px; margin: 0 auto; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);">
  
  <%= render "form", movie: @movie %>

  <div style="text-align: center; margin-top: 30px;">
    <%= link_to "Show this movie", @movie, style: "padding: 12px 20px; background-color: #007bff; color: white; border-radius: 5px; font-size: 1rem; transition: background-color 0.3s, transform 0.2s; box-shadow: 0 4px 8px rgba(0, 123, 255, 0.2);" %>
    |
    <%= link_to "Back to Movies", movies_path, style: "padding: 12px 20px; background-color: #28a745; color: white; border-radius: 5px; font-size: 1rem; transition: background-color 0.3s, transform 0.2s; box-shadow: 0 4px 8px rgba(40, 167, 69, 0.2);" %>
  </div>
</div>

<style>
  body {
    font-family: 'Arial', sans-serif;
    background-color: #f5f5f5; 
    padding: 20px;
  }

  h1 {
    margin-top: 20px; 
  }

  a {
    text-decoration: none;
    transition: background-color 0.3s, transform 0.2s;
    margin: 0 10px;
  }

  a:hover {
    background-color: #0056b3; 
    transform: translateY(-2px); 
  }
</style>
